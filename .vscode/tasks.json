{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run (CMake)",
            "type": "shell",
            "command": "cmake -S . -B build; cmake --build build; .\\build\\main.exe",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}